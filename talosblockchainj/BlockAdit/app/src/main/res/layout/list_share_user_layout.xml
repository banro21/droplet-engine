<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/shareUserrelLayoutList"
    android:layout_width="fill_parent"
    android:layout_height="100dp"
    android:background="@color/lightBG"
    android:padding="6dip">

    <LinearLayout
        android:id="@+id/shareUserlinlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/heavierBG"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/personimageShare"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:adjustViewBounds="true"
            android:padding="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/shareUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="8dp"
                android:text="Hossein"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/shareUserAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1P82rBjJMDFSay2RqKx1bydDRVh5QnGkkZ"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="12sp"
                android:textStyle="italic" />

            <TextView
                android:id="@+id/shareUserFromDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="From: 12.05.2016"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="18sp" />

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>